@model Company.Models.Сотрудники
<link rel="stylesheet" href="~/css/site.css" />
<div class="container">
    <h2>Редактирование сотрудника</h2>

    <form asp-action="Edit">
        <div class="form-group">
            <label asp-for="ФИО" class="control-label"></label>
            <input asp-for="ФИО" class="form-control" />
            <span asp-validation-for="ФИО" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Пол" class="control-label"></label>
            <input asp-for="Пол" class="form-control" />
            <span asp-validation-for="Пол" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Дата_рождения" class="control-label"></label>
            <input asp-for="Дата_рождения" class="form-control" type="date" />
            <span asp-validation-for="Дата_рождения" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="СНИЛС" class="control-label"></label>
            <input asp-for="СНИЛС" class="form-control" />
            <span asp-validation-for="СНИЛС" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Мобильный_телефон" class="control-label"></label>
            <input asp-for="Мобильный_телефон" class="form-control" />
            <span asp-validation-for="Мобильный_телефон" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Адрес_электронной_почты" class="control-label"></label>
            <input asp-for="Адрес_электронной_почты" class="form-control" />
            <span asp-validation-for="Адрес_электронной_почты" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Адрес_проживания" class="control-label"></label>
            <input asp-for="Адрес_проживания" class="form-control" />
            <span asp-validation-for="Адрес_проживания" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Должность" class="control-label"></label>
            <input asp-for="Должность" class="form-control" />
            <span asp-validation-for="Должность" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Код_сотрудника" />
        <input type="hidden" asp-for="Код_статуса" />
        <input type="hidden" asp-for="Код_аккаунта" />
        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a class="btn btn-secondary" asp-controller="EditEmployees" asp-action="Index">Вернуться назад</a>
    </form>
</div>
