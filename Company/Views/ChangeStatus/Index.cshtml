@model Company.ViewModels.ChangeStatusViewModel

<form method="post" style="margin-top: 200px;">
    <div class="form-group">
        <label>Employee:</label>
        <input type="text" name="EmployeeSearch" class="form-control" placeholder="Введите полное имя или код сотрудника" />
    </div>
    <div class="form-group">
        <label asp-for="StatusId">Status:</label>
        <select asp-for="StatusId" class="form-control">
            @foreach (var status in Model.Statuses)
            {
                <option value="@status.StatusId">@status.StatusName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
